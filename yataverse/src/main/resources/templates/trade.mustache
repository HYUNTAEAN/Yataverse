{{>layouts/header}}

<div class="d-grid gap-2 col-6 mx-auto pt-5">
    <button class="btn btn-primary" type="button" onclick="location.href='/sell'">Sell!</button>
</div>


<div class="row row-cols-1 row-cols-md-3 g-4 pt-5">
    <div class="col">
        <div class="card h-100">
            <img src="https://user-images.githubusercontent.com/88410343/146472711-29f1cf77-71e6-4dc6-a68d-617d4b7a5453.png" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">How to use?</h5>
                <p class="card-text">Information about Yataverse Trade!</p>
            </div>
        </div>
    </div>
    {{#sellList}}
    <div class="col">
        <div class="card h-100">
            <div id="map{{id}}" style="width:100%;height:30vh;"></div>
            <script>
            var mapOptions = {
                center: new naver.maps.LatLng({{lat}}, {{lng}}),
                zoom: 10
            };
            var map = new naver.maps.Map('map{{id}}', mapOptions);
            var marker = new naver.maps.Marker({
                position: new naver.maps.LatLng({{lat}}, {{lng}}),
                map: map
            });
            </script>
            <div class="card-body">
                <h5 class="card-title">{{itemName}}</h5>
                <p class="card-text">{{itemDesc}}</p>
            </div>
        </div>
    </div>
    {{/sellList}}
</div>
{{>layouts/footer}}